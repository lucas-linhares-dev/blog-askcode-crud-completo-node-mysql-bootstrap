
<%-include("partials/header.ejs")%>


<body>
    <%-include("partials/navbarhome.ejs")%>
    <div class="container">
        <br><br>
       <div class="card">
           <div class="card-header">
               <h2><%=article.title%></h2>
           </div>
           <div class="card-body">
               <%-article.body%>
           </div>
       </div>
       <br>
       <form action="/responder" method="POST">
           <h4>Respostas</h4>
           <hr>
           <%respostas.forEach(resposta =>{%>
                <div class="card">
                    <div class="card-body">
                        <%=resposta.conteudo%>
                    </div>
                </div>
                <br>
           <%})%>
           <hr>
           <label><h5>Responda:</h5></label>
           <textarea name="conteudo" placeholder="Sua resposta" class="form-control"></textarea>
           <br>
           <input type="hidden" name="articleSlug" value="<%=article.slug%>">
           <button type="submit" class="btn btn-primary">Responder</button>
       </form>
    </div>
    <br>
</body>


<%-include("partials/footer.ejs")%>